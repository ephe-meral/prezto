# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Add home dirs to path
export PATH="/sbin:/bin:/usr/sbin:/usr/bin:/usr/games:/usr/local/sbin:/usr/local/bin:/home/amnesia/.bin:/home/amnesia/.cargo/bin"
export XDG_CONFIG_HOME="/home/amnesia/.config"
export XDG_DATA_HOME="/home/amnesia/.local/share"

# TODO: Should this be neovim-remote?
export VISUAL='nvim'
export EDITOR=$VISUAL
export GIT_EDITOR=$VISUAL

export SSH_KEY_PATH="~/.ssh/id_rsa"

export JAVA_VERSION=1.8

# Enable colors and such for git diffs
MORE="-erX" ; export MORE

# Editor specific
alias vi="nvim"
alias vim="nvim"
alias emc="emacs -nw"

# Others
alias la="ls -ltra"
alias gap="git add --patch"
alias gst="git status -bs"
alias tmux="tmux -2"

# XBPS (Voidlinux)
alias xq="xbps-query --regex -Rs"
alias xu="sudo xbps-install -Su"
alias xi="sudo xbps-install -S"

# source the kiex elixir version manager
test -s "$HOME/.kiex/scripts/kiex" && source "$HOME/.kiex/scripts/kiex"
