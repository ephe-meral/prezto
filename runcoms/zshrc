# Source Prezto.
if [[ -s "${ZDOTDIR:-$HOME}/.zprezto/init.zsh" ]]; then
  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi

# Enable colors and such for git diffs
MORE="-erX" ; export MORE

# Editor specific
alias vi="nvim"
alias vim="nvim"
alias emc="emacs -nw"

# GIT specific
# NB: Other used commands (from plugin?) are:
# gco (checkout), gpc (push), gcm (commit), gcp (cherry-pick), gm (merge), gr (rebase)
alias gap="git add --patch"
alias gst="git status -bs"
alias gpl="git pull"

# Others
alias la="ls -ltra"
alias tmux="tmux -2"

# Default C compiler
alias cc="clang"

# XBPS (Voidlinux)
alias xq="xbps-query --regex -Rs"
alias xu="sudo xbps-install -Su"
alias xi="sudo xbps-install -S"
